

<MenuWidget>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, 0.8
        Rectangle:
            size: self.size
    Label:
        font_size: dp(60)
        font_name: 'assets/Sackers-Gothic-Std-Light.ttf'
        text: root.parent.menu_title
        pos_hint: {"center_x": .5, "center_y": 0.75}
    Button:
        font_size: dp(30)
        font_name: 'assets/Eurostile.ttf'
        text: root.parent.menu_button_title
        pos_hint: {"center_x": .5, "center_y": 0.4}
        size_hint: .2, .15
        on_press: root.parent.on_menu_button_pressed()
        background_normal: ''
        background_color: 1, .2, .3, .9
    Button:
        font_size: dp(20)
        font_name: 'assets/Eurostile.ttf'
        text: root.parent.exit_txt
        pos_hint: {"center_x": .5, "center_y": 0.15}
        size_hint: .1333, .1
        on_press: app.stop()
        background_normal: ''
        background_color: 1, .2, .3, .9